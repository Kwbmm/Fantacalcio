  <div class="small-12 medium-8 medium-offset-2 columns">
    {% if parameters.error %}
      <div data-alert class="alert-box alert radius text-center">
        <h3>Errore!</h3>{{parameters.error}}
      </div>
    {% endif %}
    {% if parameters.success %}
      <div data-alert class="alert-box success radius text-center">
        <h3>Registrazione effettuata</h3><br />{{parameters.success}} 
      </div>
    {% else %}
      <form action="register" method="POST" role="form">
        <legend>Registrazione</legend>
        <div class="row">
          <div class="small-12 columns">
            <div class="row collapse">
              <div class="small-1 columns">
                <span class="prefix fi-torso"></span>            
              </div>
              <div class="small-11 columns">
                <input type="text" id="username" name="username" placeholder="Username" required="required">
              </div>
              <small class="help-block">Compreso tra 3 e 15 caratteri, lettere e numeri, primo carattere una lettera. No spazi.</small>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="small-12 columns">
            <div class="row collapse">
              <div class="small-1 columns">
                <div class="input-group-addon"><span class="prefix fi-lock"></span></div>            
              </div>
              <div class="small-11 columns">
                <input data-tooltip aria-haspopup="true" class="has-tip tip-top" title="Minimo 6 caratteri. No spazi." type="password" id="password" name="password" placeholder="Password" required="required">
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="small-12 columns">
            <label for="repeat-password">Ripeti Password</label>
            <input type="password" id="repeat-password" name="repeat-password" placeholder="Ripeti Password" required="required">
          </div>
        </div>
        <div class="row">
          <div class="small-12 columns">
            <label for="invite-code">Codice Invito</label>
            <input data-tooltip aria-haspopup="true" class="has-tip tip-top" title="Inserisci il codice invito che ti Ã¨ stato fornito." type="text" id="invite-code" name="invite-code" placeholder="Inserisci il tuo invito" required="required">
          </div>
        </div>
        <div class="row">
          <div class="small-12 columns">
            <button type="submit" class="button radius" id="registerBtn">Registrati</button>        
          </div>
        </div>
      </form>        
    {% endif %}
  </div>