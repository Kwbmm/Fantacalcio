  <div class="small-12 medium-8 medium-offset-2 columns">
    {% if parameters.error %}
    <div data-alert class="alert-box alert radius text-center">
      <h3>Errore!</h3> {{parameters.error}}
    </div>
    {% elseif parameters.success %}
      <div class="alert-box success radius text-center">
        <h3>Fatto!</h3> {{parameters.success}}
      </div>
    {% endif %}
    {% if parameters.success and parameters.playingPlayers %}
      <table class="center">
        <thead>
          <tr>
            <th class="text-center">Ruolo</th>
            <th class="text-center">Nome</th>
          </tr>
        </thead>
        <tbody>
          {% for role,name in parameters.playingPlayers if name %}
          <tr>
            {% set role_new = role|split('-',3) %}
            {% if role_new[2] is defined %}
              <td class="text-center">{{role_new[0]}} {{role_new[1]}} {{role_new[2]}}</td>
            {% elseif role_new[1] is defined %}
              <td class="text-center">{{role_new[0]}} {{role_new[1]}}</td>
            {% else %}
              <td class="text-center">{{role_new[0]}}</td>
            {% endif %}
            {% set name_new = name|split(' ', 2) %}
            {% if name_new[1] is defined %}
              <td class="text-center">{{name_new[1]}}</td>
            {% else %}
              <td class="text-center">{{name_new[0]}}</td>                
            {% endif %}
          </tr>  
          {% endfor %}
        </tbody>
      </table>
    {% endif %}
  </div>