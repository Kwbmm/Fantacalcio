  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
  {% if parameters.warning %}
    <div class="alert alert-warning text-center">
      <h3>Attenzione!</h3>{{parameters.warning}}
    </div>  
  {% else %}
  {% set total = 0 %}
  {% if parameters.error %}
    <div class="alert alert-danger text-center">
      <h3>Errore!</h3>{{parameters.error}}
    </div>
  {% elseif parameters.success %}
    <div class="alert alert-success text-center">
      <h3>Acquisti effettuati</h3>{{parameters.success}} 
    </div>
  {% else %}
    {% if parameters.purchases is defined and parameters.purchases is empty %}
      <div class="alert alert-warning text-center">
        <h3>Vuoto!</h3> Non ci sono acquisti nel tuo carrello..
      </div>
    {% else %}
    <h4>I tuoi crediti: <span class="label label-default">{{userMoney}}</span></h4>
    <form action="checkout" method="POST" role="form">        
      <div class="table-responsive">
        <table class="table table-hover table-bordered table-condensed table-fixed-header">
          <thead>
            <tr>
              <th class="text-center">Ruolo</th>
              <th class="text-center">Nome</th>
              <th class="text-center">Prezzo</th>
              <th class="text-center">Rimuovi</th>
            </tr>
          </thead>
          <tbody>
          {% for purchase in parameters.purchases %}
            <tr class="text-center">
              <td>{{purchase.role}}</td>
              <td>{{purchase.name}}</td>
              <td>{{purchase.price|number_format(0,',',' ')}}</td>
              <td>
                <span class="glyphicon glyphicon-trash text-danger" aria-hidden="true" player-id="{{purchase.id}}"></span>
                <input type="hidden" value="" name="{{purchase.id}}">
              </td>
            </tr>
            {% set total = total + purchase.price %}            
          {% endfor %}
          <tr class="active text-center">
            <td colspan="4"><b>Totale</b>: <span id="totale">{{total}}</span></td>
          </tr>
          </tbody>
        </table>
      </div>
      <div class="text-center">    
        <button type="submit" {{ (total <= userMoney) ? 'class="btn btn-success"' : 'class="btn btn-success hidden"' }} id="confirmPurchases">Conferma Acquisti</button>
      </div>
    </form>
    {% endif %}
  {% endif %}      
  {% endif %}
  </div>